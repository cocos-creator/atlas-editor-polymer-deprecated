right-sidebar-width = 240px
left-sidebar-width = 320px

:host {
    display: block

    .workspace {
        background: url(../img/bg-linen.jpg) 50% top
        height: 100%
        min-height: 100%
        max-height: 100%
        overflow: hidden
        margin-right: right-sidebar-width
        margin-left: left-sidebar-width
    }

    .left {
        position: fixed
        width: left-sidebar-width
        height: 100%
        top: 0
        left: 0
        z-index: 100
        box-shadow: 2px 0 3px 0 rgba(0,0,0,0.2)
    }

    .right {
        position: fixed
        width: right-sidebar-width
        height: 100%
        top: 0
        right: 0
        z-index: 100
        box-shadow: -2px 0 3px 0 rgba(0,0,0,0.2)
    }

    .sidebar {
        background-color: #171717
        border-top: 1px solid #000
        color: white
    }

    span.space {
        width: 5px;
        height: 5px;
        display: block;
    }

    #sprite-list-view {
        .title {
            font-family: Helvetica,Arial,sans-serif
            padding: 8px
            font-size: 10px
            font-weight: 700
            border-top: 1px solid #3a3a3a
            border-left: 1px solid #1f1f1f
            border-right: 1px solid #1f1f1f

            text-transform: uppercase
            text-shadow: 0 -1px 0 #000
            background: #242424
            color: #b1b1b1
        }
    }
}
